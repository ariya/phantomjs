        (WebCore::NamedAttrMap::getNamedItem): Ditto.
        (WebCore::NamedAttrMap::removeNamedItem): Ditto.
        (WebCore::NamedAttrMap::setNamedItem): Ditto.
        (WebCore::NamedAttrMap::item): Ditto.
